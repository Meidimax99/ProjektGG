		default: { 
			selection: textfield_selection
			background: textfield
			font: main-22
			fontColor: white
			cursor: cursor-selection
		},
		large: { 
			selection: textfield_selection
			background: textfield_large
			font: main-22
			fontColor: white
			cursor: cursor-selection
		},
		textarea: { 
			selection: textfield_selection
			background: textarea
			font: main-19
			fontColor: white
			cursor: cursor-selection
		}
	},
	
	com.badlogic.gdx.scenes.scene2d.ui.CheckBox$CheckBoxStyle: {
		default: { 
			checkboxOn: check-round-on
