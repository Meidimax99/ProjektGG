		default: {
			font: main-22
			fontColor: white
		}
	}
	
	com.badlogic.gdx.scenes.scene2d.ui.TextTooltip$TextTooltipStyle: {
		default: {
			label: {
				font: main-19
			},
			background: button-up, 
			wrapWidth: 400
		}
