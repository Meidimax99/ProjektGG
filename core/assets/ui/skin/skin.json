			knobDown: slider-knob-down-h,
			disabledKnob: slider-knob-h
		}
	},
	
	com.badlogic.gdx.scenes.scene2d.ui.ScrollPane$ScrollPaneStyle: {
		default: { 
			vScroll: check-square-on
			hScrollKnob: scroll-knob-h
			background: scroll-h
			hScroll: check-square-off
			vScrollKnob: scroll-knob-v
		}
	},
