			fontColor: white
			downFontColor: grey
			disabledFontColor: grey
			disabled: button-up
		},
		normal: {
			up: button-normal-up
			down: button-normal-down
			over: button-normal-over
			font: main-22
			fontColor: white
			downFontColor: grey
			disabledFontColor: grey
		}
		small: {
			up: small-button-up
			down: small-button-down
			over: small-button-over
			font: main-19
			fontColor: white
			downFontColor: grey
			disabledFontColor: grey
		}
	},
	
	com.badlogic.gdx.scenes.scene2d.ui.Label$LabelStyle: {
		default: {
			font: main-19
			fontColor: white
		},
		big: {
			font: main-22
			fontColor: white
		},
		with-background: {
			font: main-19
			fontColor: white
			background: textarea
		},
		title: { 
			font: title-20
			fontColor: white
		},
		handwritten: { 
			font: handwritten-20
			fontColor: white
		}
	},
	
