{
	Color: {
		white: {
			r: 1,
			g: 1,
			b: 1,
			a: 1
		},
		grey: {
			r: 0.7,
			g: 0.7,
			b: 0.7,
			a: 1
		},
		dark_grey: {
			r: 0.12,
			g: 0.12,
			b: 0.12,
			a: 1
		},
		ink_blue: {
			r: 0.12,
			g: 0.10,
			b: 0.31,
			a: 1
		}
	},
	
	BitmapFont: {
		ui-element-18: {
			file: ../fonts/alemdra_sc/AlmendraSC-Regular.ttf,
			size: 18
		},
		ui-element-19: {
			file: ../fonts/alemdra_sc/AlmendraSC-Regular.ttf,
			size: 19
		},
		ui-element-21: {
			file: ../fonts/alemdra_sc/AlmendraSC-Regular.ttf,
			size: 21
		},
		ui-element-23: {
			file: ../fonts/alemdra_sc/AlmendraSC-Regular.ttf,
			size: 23
		},
		ui-text-20: {
			file: ../fonts/almendra/Almendra-Regular.ttf,
			size: 20
		},
		ui-title-24: {
			file: ../fonts/fredericka_the_great/FrederickatheGreat-Regular.ttf,
			size: 24
		},
		ui-title-29: {
			file: ../fonts/fredericka_the_great/FrederickatheGreat-Regular.ttf,
			size: 29
		},
		ui-text-handwritten-20: {
			file: ../fonts/homemade_apple/HomemadeApple-Regular.ttf,
			size: 20
		},
	},

	ImageTextButtonStyle: {
		default: {
			up: button_default_up,
			down: button_default_down,
			over: button_default_over
			font: ui-element-18,
			fontColor: white,
			downFontColor: grey,
			disabledFontColor: grey
		},
		large: {
			up: button_large_up,
			down: button_large_down,
			over: button_large_over,
			font: ui-element-23,
			fontColor: white,
			downFontColor: grey,
			disabledFontColor: grey,
			disabled: button_large_up
		},
		medium: {
			up: button_normal_up,
			down: button_normal_down,
			over: button_normal_over,
			font: ui-element-21,
			fontColor: white,
			downFontColor: grey,
			disabledFontColor: grey,
		}
	},

	ImageButtonStyle: {
		leaning_book: {
			up: button_image_leaning_book,
			down: button_image_leaning_book,
			over: button_image_leaning_book
		},
		inventory: {
			up: button_image_inventory,
			down: button_image_inventory,
			over: button_image_inventory
		},
		refresh: {
			up: button_image_refresh_up,
			down: button_image_refresh_down,
			over: button_image_refresh_over
		},
		kick: {
			up: button_image_kick_up,
			down: button_image_kick_down,
			over: button_image_kick_over
		}
	},

	LabelStyle: {
		default: {
			font: ui-element-19,
			fontColor: white
		},
		small: {
			font: ui-element-18,
			fontColor: white
		},
		dark: {
			font: ui-element-19,
			fontColor: dark_grey
		},
		big_dark: {
			font: ui-element-21,
			fontColor: dark_grey
		},
		title: {
			font: ui-title-24,
			fontColor: white
		},
		text: {
			font: ui-text-20,
			fontColor: white
		}
		ink_title: {
			font: ui-title-24,
			fontColor: ink_blue
		},
		ink_text: {
			font: ui-text-handwritten-20,
			fontColor: ink_blue
		}
	},

	CheckBoxStyle: {
		default: {
			checkboxOn: check_box_round_on,
			checkboxOff: check_box_round_off,
			font: ui-element-19,
			fontColor: white
		}
		square: {
			checkboxOn: check_box_square_on,
			checkboxOff: check_box_square_off,
			font: ui-element-19,
			fontColor: white
		}
	},

	TextFieldStyle: {
		default: {
			selection: textfield_selection,
			background: textfield,
			font: ui-element-21,
			fontColor: white,
			cursor: cursor_selection
		},
		large: {
			selection: textfield_selection,
			background: textfield_large,
			font: ui-text-20,
			fontColor: white,
			cursor: cursor_selection
		}
	},

	SliderStyle: {
		default-horizontal: {
			background: slider_h,
			knob: slider_h_knob,
			knobOver: slider_h_knob_over,
			knobDown: slider_h_knob_down,
			disabledKnob: slider_h_knob_down
		}
	},

	ScrollPaneStyle: {
		default: {
			vScroll: scroll_v
			vScrollKnob: scroll_v_knob
			hScroll: scroll_h
			hScrollKnob: scroll_h_knob
		},
		with-background: {
			background: scroll_pane
			vScroll: scroll_v
			vScrollKnob: scroll_v_knob
			hScroll: scroll_h
			hScrollKnob: scroll_h_knob
		}
	},

	WindowStyle: {
		default: {
			titleFont: ui-text-20,
			background: window_dialog,
			titleFontColor: white
		},
		big: {
			titleFont: ui-element-19,
			background: window_big,
			titleFontColor: white
		}
	}
}
